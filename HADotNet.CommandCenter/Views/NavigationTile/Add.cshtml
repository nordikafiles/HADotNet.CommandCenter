@model NavigationTile
@{
    ViewData["Title"] = (Model == null ? "Add" : "Edit") + " Tile: Navigation";
}

<h1><span class="va-top @(new NavigationTile().IconClassName)"></span> @(Model == null ? "Add" : "Edit") Tile: Navigation</h1>

<form class="ui form" method="post" asp-action="Save" asp-route-page="@Context.Request.RouteValues["page"]">
    <input type="hidden" name="originalName" value="@Model?.Name" />
    <div class="ui grid">
        <div class="row">
            <div class="six wide computer twelve wide tablet sixteen wide mobile column">
                <h3>Basic Tile Info</h3>
                <div class="ui segment">
                    <div class="field">
                        <label asp-for="Name"></label>
                        <div class="ui left icon input">
                            <i class="tag icon"></i>
                            <input asp-for="Name" />
                        </div>
                        <span class="ui up pointing small red label" asp-validation-for="Name"></span>
                        <p><small>An internal name to identify this tile, not shown on the dashboard.</small></p>
                    </div>
                    <div class="inline field">
                        <label asp-for="SizeX"></label>
                        <i class="arrows alternate horizontal icon"></i>
                        <select class="ui dropdown" asp-for="SizeX">
                            <option value="1">1x</option>
                            <option value="2">2x</option>
                            <option value="3">3x</option>
                            <option value="4">4x</option>
                        </select>
                        <span class="ui up pointing small red label" asp-validation-for="SizeX"></span>
                    </div>
                    <div class="inline field">
                        <label asp-for="SizeY"></label>
                        <i class="arrows alternate vertical icon"></i>
                        <select class="ui dropdown" asp-for="SizeY">
                            <option value="1">1x</option>
                            <option value="2">2x</option>
                            <option value="3">3x</option>
                            <option value="4">4x</option>
                        </select>
                        <span class="ui up pointing small red label" asp-validation-for="SizeY"></span>
                    </div>
                    <div class="field">
                        <label asp-for="AdditionalCss"></label>
                        <textarea asp-for="AdditionalCss"></textarea>
                        <span class="ui up pointing small red label" asp-validation-for="AdditionalCss"></span>
                        <p><small>Enter one or more CSS properties. Don't enclose them with <code>{ ... }</code>.</small></p>
                    </div>
                </div>
                <h3>Navigation Details</h3>
                <div class="ui segment">
                    <div class="field">
                        <label asp-for="Mode"></label>
                        <select class="ui dropdown" asp-for="Mode">
                            <option value="home">Home</option>
                            <option value="nav">Navigate</option>
                            <option value="refresh">Refresh</option>
                        </select>
                        <span class="ui up pointing small red label" asp-validation-for="Mode"></span>
                    </div>
                    <div class="field">
                        <label asp-for="Target"></label>
                        <select class="ui dropdown" asp-for="Target" asp-items="@ViewBag.Pages"></select>
                        <span class="ui up pointing small red label" asp-validation-for="Target"></span>
                        <p><small>Only used if "Mode" is "Navigate".</small></p>
                    </div>
                    <div class="field">
                        <label asp-for="DisplayIcon"></label>
                        <div class="ui left icon input">
                            <i class="large icon mdi-icon-placeholder"></i>
                            <input asp-for="DisplayIcon" />
                        </div>
                        <span class="ui up pointing small red label" asp-validation-for="DisplayIcon"></span>
                        <p><small>Enter a Material Design icon name. Do not include "mdi" or the "mdi-" prefix (e.g. for "mdi-home", just enter "home").</small></p>
                    </div>
                    <div class="field">
                        <label asp-for="Label"></label>
                        <div class="ui left icon input">
                            <i class="font icon"></i>
                            <input asp-for="Label" />
                        </div>
                        <span class="ui up pointing small red label" asp-validation-for="Label"></span>
                        <p><small>Enter a label to show on the tile.</small></p>
                    </div>

                </div>
                <div class="field">
                    <button type="submit" class="ui green icon labeled button">
                        <i class="@(Model == null ? "plus" : "save") icon"></i>
                        @(Model == null ? "Add" : "Edit") Tile
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>